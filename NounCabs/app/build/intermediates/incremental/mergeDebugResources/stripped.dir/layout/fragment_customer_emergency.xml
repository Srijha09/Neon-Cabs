<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Customer.CustomerPaymentFragment"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/ll_new_emergency"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="invisible"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_emergency_1_customer_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="Emergency Phone Number 1"
            android:textSize="18dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_emergency_phone_1_customer_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="14sp" />


    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_emeregency_2_customer_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Emergency Phone Number 2"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_emergency_phone_2_customer_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:gravity="center" />


        </LinearLayout>
</LinearLayout>
<LinearLayout
    android:id="@+id/ll_old_emergency"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_emergency_1_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="Emergency Phone Number 1"
            android:textSize="18dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/etv_emergency_phone_1_customer"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:singleLine="true"
            android:layout_weight="1"/>


    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_emeregency_2_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Emergency Phone Number 2"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etv_emergency_phone_2_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:gravity="center" />

    </LinearLayout>
    <Button
        android:id="@+id/bt_add_emergency_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/colorPrimary"
        android:text="Add Emergency Contacts"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18dp" />


</LinearLayout>
</LinearLayout>