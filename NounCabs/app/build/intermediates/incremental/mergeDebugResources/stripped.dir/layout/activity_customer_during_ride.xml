<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.CustomerDuringRideActivity">

    <WebView
        android:id="@+id/wv_maps_customer"
        android:layout_above="@id/tv_riding_during_customer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/bt_send_sms_emergency_during_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_margin="5dp"
        android:text="Emergency"
        android:padding="5dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_riding_during_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bt_stop_ride_customer"
        android:background="#ffffff"
        android:gravity="center"
        android:text="Riding ..."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt_stop_ride_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Stop Ride"
        android:textColor="#ffffff"
        android:background="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:textSize="24sp" />
</RelativeLayout>